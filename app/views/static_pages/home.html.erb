<h2>Tasks for <%= @current_date %></h2>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Completed</th>
  </tr>
  <% @daily_tasks.each do |dt| %>
    <tr>
      <td><%= dt.title %></td>
      <td><%= dt.description %></td>
      <%= dt.complete %>
      <% if dt.complete == false %>
        <td><%= link_to "Complete Task", done_task_path(dt, done_task: dt.id), class: "btn btn-success" %></td>
      <% else %>
        <td><%= link_to "Already Done", "#", class: "btn btn-info" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
