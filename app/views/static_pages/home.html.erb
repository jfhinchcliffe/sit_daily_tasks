<h2>
  Tasks for <%= @current_day_list.title %><br>
  <small>
    Completed Tasks: <%= @complete_task_count %>
    Incomplete Tasks: <%= @incomplete_task_count %>
  </small>
</h2>
<% if @incomplete_task_count == 0 %>
  <div class="col-md-4 col-md-offset-4">
    <p class="text-center">
      <%= image_tag("brentdance.gif")%>
    </p>
    <p class="text-center">
      All Tasks Done!
    </p>
  </div>
<% end %>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Completed</th>
  </tr>
  <% @daily_tasks.each do |dt| %>
    <tr>
      <td><%= dt.title %></td>
      <td><%= dt.description %></td>
      <% if dt.complete == false %>
        <td><%= link_to "Complete Task", done_task_path(dt, done_task: dt.id), class: "btn btn-success" %></td>
      <% else %>
        <td><%= link_to "Already Done", reset_task_task_path(dt, reset_task: dt.id), class: "btn btn-info" %></td>
      <% end %>
    </tr>
  <% end %>

</table>
