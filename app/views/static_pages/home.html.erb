<h2>Tasks for <%= @current_day_list.title %></h2>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Completed</th>
  </tr>
  <% @daily_tasks.each do |dt| %>
    <tr>
      <td><%= dt.title %></td>
      <td><%= dt.description %></td>
      <% if dt.complete == false %>
        <td><%= link_to "Complete Task", done_task_path(dt, done_task: dt.id), class: "btn btn-success" %></td>
      <% else %>
        <td><%= link_to "Already Done", "#", class: "btn btn-info-disabled" %></td>
      <% end %>
    </tr>
  <% end %>

</table>
