<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @tasks.each do |t| %>
    <tr>
      <td><%= t.title %></td>
      <td><%= t.description %></td>
      <td><%= link_to "Show", task_path(t), class: "btn btn-default" %></td>
      <td><%= link_to "Edit", edit_task_path(t), class: "btn btn-default" %></td>
      <td><%= link_to "Delete", t, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </tr>
  <% end %>
</table>

<%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
